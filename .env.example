# ===========================================
# Multi-Tenant SaaS Platform - Environment Variables
# ===========================================
# IMPORTANT: Copy this file to .env and update with your own secure values
# NEVER commit the .env file to version control!
#
# To generate a secure SECRET_KEY, run:
#   python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
#
# To generate a secure JWT_SECRET, run:
#   python -c "import secrets; print(secrets.token_urlsafe(64))"

# ===========================================
# PostgreSQL Database Configuration
# ===========================================
POSTGRES_DB=saas_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-database-password-here

# ===========================================
# Backend Database Connection
# ===========================================
DB_HOST=database
DB_PORT=5432
DB_NAME=saas_db
DB_USER=postgres
DB_PASSWORD=your-secure-database-password-here

# ===========================================
# Django Configuration
# ===========================================
# SECURITY WARNING: Generate a unique secret key for production!
SECRET_KEY=your-unique-secret-key-at-least-50-characters-long-generate-new-one
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,backend,0.0.0.0

# ===========================================
# JWT Configuration
# ===========================================
# SECURITY WARNING: Generate a unique JWT secret for production!
JWT_SECRET=your-unique-jwt-secret-at-least-32-characters-generate-new-one
JWT_EXPIRES_IN=24h

# ===========================================
# CORS Configuration
# ===========================================
FRONTEND_URL=http://localhost:3000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://frontend:3000,http://127.0.0.1:3000

# ===========================================
# Server Configuration
# ===========================================
PORT=5000
